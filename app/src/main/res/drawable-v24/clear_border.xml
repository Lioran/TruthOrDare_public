<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"   >

    <stroke
        android:width="10dp"
        android:color="#1b1b1b">
    </stroke>
    <solid android:color="#1b1b1b" />
    <padding
        android:top="15dp"
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        >
    </padding>

    <!-- The radius makes the corners rounded -->
    <corners android:radius="20dp">
    </corners>

</shape>